@model Contact
@{
    ViewBag.Title = "Xem tin nhắn liên hệ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<div class="container">
    <!-- Page-Title -->
    <div class="row">
        <div class="col-sm-12">
            <div class="pull-right m-t-15">
                <a href="@Url.Action("Delete", "Contact", new { id = Model.ContactID})" onclick="delete_contact(this);return false;" class="btn btn-danger waves-effect waves-light">
                    <span class="btn-label">
                        <i class="zmdi zmdi-close-circle-o"></i>
                    </span>Xóa
                </a>
                <a href="@Url.Action("Index","Contact")" class="btn btn-info waves-effect waves-light">
                    <span class="btn-label">
                        <i class="zmdi zmdi-assignment"></i>
                    </span>Trở về danh sách
                </a>
            </div>
            <h4 class="page-title">@ViewBag.Title</h4>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <div class="mail-head">
                    <p>Người gửi: @Model.FullName (@Model.Email)</p>
                    <p>SĐT: <span class="label label-info">@Model.Phone</span> vào lúc @Model.Time.ToString("hh:ss tt - dd/MM/yyyy")</p>
                </div>
                <hr />
                <div class="mail-body">
                    @Model.Message
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        function delete_contact(button) {
            swal({
                title: 'Bạn chắc chắn?',
                text: 'Bạn muốn xóa chứ, khi đã xóa thì không thể nào khôi phục lại được nữa',
                type: 'warning',
                showCancelButton: true,
                confirmButtonClass: 'btn-success',
                confirmButtonText: 'Xóa ngay',
                cancelButtonText: 'Hủy',
                closeOnConfirm: false
            }, function (isConfirm) {
                if (isConfirm) {
                    window.location.href = button.href;
                }
            });
        }
    </script>    
}